<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:elevation="1dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/centre_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/quicksand_bold"
            android:layout_margin="8dp"
            android:text="Center Name" />

        <TextView
            android:id="@+id/centre_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/quicksand_medium"
            android:textColor="@color/black"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="8dp"
            android:text="Center Name" />

        <TextView
            android:id="@+id/centre_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_bold"
            android:textColor="@color/black"
            android:layout_margin="8dp"
            android:text="Center Address" />

        <TextView
            android:id="@+id/centre_add_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/quicksand_medium"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"
            android:text="Center Address" />


        <TextView
            android:id="@+id/vaccine_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:fontFamily="@font/quicksand_bold"
            android:textColor="@color/black"
            android:text="Vaccine Name" />

        <TextView
            android:id="@+id/fees_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:fontFamily="@font/quicksand_medium"
            android:textColor="@color/black"
            android:text="Fees" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fromTime_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:fontFamily="@font/quicksand_medium"
                android:textColor="@color/black"
                android:text="Timings From: " />

            <TextView
                android:id="@+id/toTime_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/quicksand_medium"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp"
                android:text="To: " />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ageLimit_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:fontFamily="@font/quicksand_medium"
                android:textColor="@color/black"
                android:text="Age Limit" />

            <TextView
                android:id="@+id/availability_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/quicksand_medium"
                android:textColor="@color/black"
                android:text="Availability" />

        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>


